# #############################################

GENERATED :=
OBJECTS :=

GENERATED += $(OBJDIR)/buff_view.o
GENERATED += $(OBJDIR)/glu.o
GENERATED += $(OBJDIR)/imgui.o
GENERATED += $(OBJDIR)/imgui_draw.o
GENERATED += $(OBJDIR)/imgui_impl_glfw.o
